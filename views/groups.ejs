<div class="container">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <h1 style='color:white; text-align: center;'>Groups</h1>
    </div>
    <div class="col-md-4">
    </div>
  </div>
  <br/>
  <div class="row">
    <% for (const group in groups) { %>
    
      <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4><a id='group-overview' style='text-align: center;' href='/<%= groups[group].dataValues.id %>/group-overview'><%= groups[group].dataValues.groupname %></a></h4>
            </div>
            <div style='display: none;'><%= groups[group].dataValues.id %></div>
            <div class="panel-body"><% for (const user in groups[group].dataValues.users) { %>
              <div><%= groups[group].dataValues.users[user].dataValues.firstname %> <%= groups[group].dataValues.users[user].dataValues.surname %></div>
            <% } %></div>
          </div> 
      </div>
    <% } %>
  </div>

  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4" style='text-align: center;' >
      <h2><a id='addgroup' style='color:white; text-align: center;' href=/add-group>Add Group</a></h2>
    </div>
    <div class="col-md-4">
    </div>
  </div>

</div>
